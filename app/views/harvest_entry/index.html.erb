<h2>Harvest Entries</h2>
<%= link_to "Harvest User", harvest_user_path %> 
    


<p><a id="new" href="">Add new row</a></p>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="redmine_harvest_smc_table">
    <thead>
        <tr>
            <td>&nbsp;</td>
            <td>status</td>
            <td>spent_at</td>
            <td>client</td>
            <td>task</td>
            <td>hours</td>
            <td>notes</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
            <% @harvest_entries.each do |entry| %>
            <tr class="odd gradeX">
                <td><a href="https://singlemind.harvestapp.com/time/day/<%= Date.strptime(entry.spent_at, '%Y-%m-%d').strftime('%Y/%m/%d') %>" title="link to harvest" class="entry_link_to_harvest">âƒ”</a></td>
                <td><%= entry.status %></td>
                <td><%= entry.spent_at %></td>
                <td><%= entry.client %></td>
                <td><%= entry.task %></td>
                <td><%= entry.hours %></td>
                <td><%= entry.notes %></td> 
                <td><a class="rm_harvest_smc_edit" href=""><%= t :rm_smc_edit %></a></td>
                <td><a class="rm_harvest_smc_delete" href=""><%= t :rm_smc_delete %></a></td>   
            </tr>
            <% end %>
    </tbody>
</table>
